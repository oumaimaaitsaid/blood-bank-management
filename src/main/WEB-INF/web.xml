<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- =================== Servlets =================== -->

    <!-- Servlet pour Donneur -->
    <servlet>
        <servlet-name>DonneurServlet</servlet-name>
        <servlet-class>com.bloodbank.servlet.DonneurServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DonneurServlet</servlet-name>
        <url-pattern>/donneur</url-pattern>
    </servlet-mapping>

    <!-- Servlet pour Receveur -->
    <servlet>
        <servlet-name>ReceveurServlet</servlet-name>
        <servlet-class>com.bloodbank.servlet.ReceveurServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReceveurServlet</servlet-name>
        <url-pattern>/receveur</url-pattern>
    </servlet-mapping>

    <!-- Servlet pour Gestion du Matching Donneur/Receveur -->
    <servlet>
        <servlet-name>MatchingServlet</servlet-name>
        <servlet-class>com.bloodbank.servlet.MatchingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MatchingServlet</servlet-name>
        <url-pattern>/matching</url-pattern>
    </servlet-mapping>

    <!-- =================== Page d'accueil =================== -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
